# ── KuCoin API Credentials ────────────────────────────────────────────────────
# Required for live trading. Omit or leave blank when PAPER_MODE=true.
KUCOIN_API_KEY=your-api-key
KUCOIN_API_SECRET=your-api-secret
KUCOIN_API_PASSPHRASE=your-passphrase

# ── Paper / Sandbox Mode ──────────────────────────────────────────────────────
# Set PAPER_MODE=true to simulate orders without touching real funds.
# API credentials are optional in this mode (market data is public).
PAPER_MODE=true

# ── Capital & Risk ────────────────────────────────────────────────────────────
INITIAL_CAPITAL=50.0
TARGET_CAPITAL_USDT=10000.0
TRADE_FRACTION=0.95
STOP_LOSS_PCT=0.015
TAKE_PROFIT_PCT=0.025

# ── Trading Pairs ─────────────────────────────────────────────────────────────
# Comma-separated list of KuCoin symbols to scan (BASE-QUOTE format).
# Remove or add symbols to limit the scan universe.
TRADING_PAIRS=BTC-USDT,ETH-USDT,SOL-USDT,BNB-USDT,XRP-USDT,DOGE-USDT,ADA-USDT,AVAX-USDT,DOT-USDT,POL-USDT,LINK-USDT,LTC-USDT,UNI-USDT,ATOM-USDT,TRX-USDT,NEAR-USDT,APT-USDT,OP-USDT,ARB-USDT,SUI-USDT,TON-USDT,SHIB-USDT,BCH-USDT,FIL-USDT,INJ-USDT

# ── Strategy Parameters ───────────────────────────────────────────────────────
RSI_PERIOD=14
RSI_OVERSOLD=35
RSI_OVERBOUGHT=65
EMA_SHORT=9
EMA_LONG=21
KLINE_INTERVAL=5min
KLINE_LIMIT=100

# Minimum signal confidence (0-1) to open a position (0 = disabled).
MIN_CONFIDENCE=0.0

# Maximum fraction of capital at risk across all open positions.
MAX_PORTFOLIO_HEAT=0.06

# Reject entries when fill deviates more than this fraction from expected price.
MAX_SLIPPAGE_PCT=0.002

# Prefer limit orders over market orders (falls back to market on failure).
USE_LIMIT_ORDERS=false

# ── Safety Limits ─────────────────────────────────────────────────────────────
EQUITY_FLOOR_USDT=10.0
MAX_CONSECUTIVE_LOSSES=5
COOLDOWN_SECONDS=300

# ── Operational ───────────────────────────────────────────────────────────────
POLL_INTERVAL_SECONDS=30
MAX_OPEN_POSITIONS=3
MIN_TRADE_BALANCE_USDT=1.0

# ── Logging ───────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FILE=trading_bot.log
