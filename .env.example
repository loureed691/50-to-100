# ── KuCoin API Credentials ────────────────────────────────────────────────────
# Required for live trading. Omit or leave blank when PAPER_MODE=true.
KUCOIN_API_KEY=your-api-key
KUCOIN_API_SECRET=your-api-secret
KUCOIN_API_PASSPHRASE=your-passphrase

# ── Paper / Sandbox Mode ──────────────────────────────────────────────────────
# Set PAPER_MODE=true to simulate orders without touching real funds.
# API credentials are optional in this mode (market data is public).
PAPER_MODE=true

# ── Capital & Risk ────────────────────────────────────────────────────────────
INITIAL_CAPITAL=50.0
TARGET_CAPITAL_USDT=10000.0
TRADE_FRACTION=0.95
STOP_LOSS_PCT=0.015
TAKE_PROFIT_PCT=0.025

# ── Strategy Parameters ───────────────────────────────────────────────────────
RSI_PERIOD=14
RSI_OVERSOLD=35
RSI_OVERBOUGHT=65
EMA_SHORT=9
EMA_LONG=21
KLINE_INTERVAL=5min
KLINE_LIMIT=100

# ── Safety Limits ─────────────────────────────────────────────────────────────
EQUITY_FLOOR_USDT=10.0
MAX_CONSECUTIVE_LOSSES=5
COOLDOWN_SECONDS=300

# ── Operational ───────────────────────────────────────────────────────────────
POLL_INTERVAL_SECONDS=30
MAX_OPEN_POSITIONS=3
MIN_TRADE_BALANCE_USDT=1.0

# ── Logging ───────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FILE=trading_bot.log
